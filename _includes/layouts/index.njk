{% extends "layouts/base.njk" %} {% block content %}
<!-- This example requires Tailwind CSS v2.0+ -->
<div class="bg-gray-900">
  <div class="mx-auto py-12 px-4 max-w-7xl sm:px-6 lg:px-8 lg:py-24">
    <div class="space-y-12">
      <div class="space-y-5 sm:space-y-4 md:max-w-xl lg:max-w-3xl xl:max-w-none">
      </div>
      <ul role="list" class="space-y-4 sm:grid sm:grid-cols-2 sm:eap-6 sm:space-y-0 lg:grid-cols-3 lg:gap-8">
	{% for team in teams %}
        <li class="py-10 px-6 bg-gray-800 text-center rounded-lg xl:px-10 xl:text-center">
          <div class="space-y-6 xl:space-y-10">
            <img class="mx-auto h-40 w-40 rounded-full xl:w-56 xl:h-56" src="/img/nbalogos/{{team.src}}" alt="">
            <div class="space-y-2 xl:items-center xl:justify-between">
              <div class="font-medium text-lg leading-6 space-y-1">
                <h3 class="text-white">{{team.name}}</h3>
                <p class="text-indigo-400">{{team.sub}}</p>
              </div>
            </div>
          </div>
        </li>
	{% endfor %}
        <!-- More people... -->
      </ul>
    </div>
  </div>
</div>
{% endblock %}
